// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Day {
  date            DateTime  @id @db.Date
  user_day_loaded Boolean   @default(false)
  UserDay         UserDay[]
}

model UserDay {
  id      Int      @id @default(autoincrement())
  user_id String
  date    DateTime @db.Date

  is_active  Boolean
  is_desktop Boolean
  is_ios     Boolean
  is_android Boolean

  messages_posted            Int
  messages_posted_in_channel Int
  reactions_added            Int

  user User @relation(fields: [user_id], references: [user_id])
  day  Day  @relation(fields: [date], references: [date])

  @@index([user_id])
}

model User {
  user_id String @id

  display_name    String?
  real_name       String?
  profile_picture String?
  pronouns        String?

  title    String?
  phone    String?
  location String?
  school   String?
  birthday String?
  manager  String[]

  website_url            String?
  website_url_alt        String?
  scrapbook_url          String?
  scrapbook_url_alt      String?
  github_url             String?
  github_url_alt         String?
  ham_callsign           String?
  matrix_username        String?
  bluesky_url            String?
  bluesky_url_alt        String?
  social_account_url     String?
  social_account_url_alt String?

  favorite_channels   String?
  favorite_foods      String?
  favorite_artists    String?
  favorite_activities String?
  favorite_tools      String?
  dog_cat_infra       String?
  pfp_credit          String?

  gold_since String?
  club_rank  String?

  last_updated DateTime @default("1970-01-01T00:00:00Z") @db.Timestamptz

  UserDay UserDay[]
}
